= render "partial/header"
%main
	.row
		.col.s12
			.col.s12.l6.m8.offset-l3.offset-m2
				.card-panel.grey.lighten-4.z-depth-1
					%h2.blue-text.darken-1 Mot de passe oubli√©?
					= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
						= devise_error_messages!
						.field
						= f.label :email,"Email"
						%br/
						= f.email_field :email, autofocus: true
						.actions
						= f.submit "Envoyer les instructions",class: "waves-effect waves-light btn blue darken-2"
= render "partial/footer"
