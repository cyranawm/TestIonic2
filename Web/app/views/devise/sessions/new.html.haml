= render "partial/header"
%main
  .row
    .col.s12
      .col.s12.l6.m8.offset-l3.offset-m2
        .card-panel.grey.lighten-4.z-depth-1
          -if flash[:error]
            .alert.alert-error 
              = flash[:error]
          %h2.blue-text.darken-1 Connexion 
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .field
              = f.label :email,"Email"
              %br/
              = f.email_field :email, autofocus: true
            .field
              = f.label :password,"Mot de passe"
              %br/
              = f.password_field :password, autocomplete: "off"
              = f.submit "Connexion" , class: "waves-effect waves-light btn blue darken-2"

              .row
                .col.s12
              .row
                = link_to "Mot de passe oubli√©?", new_password_path(resource_name),class: "waves-effect waves-light btn blue darken-2"

= render "partial/footer"
